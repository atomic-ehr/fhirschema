{
  "name": "@atomic-ehr/fhirschema",
  "version": "0.0.3",
  "description": "TypeScript implementation of FHIRSchema converter and validator",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "test": "bun test",
    "typecheck": "bunx tsc --noEmit",
    "build": "bun run build:clean && bun run build:types",
    "build:clean": "rm -rf dist",
    "build:types": "bunx tsc -p tsconfig.build.json",
    "prepublishOnly": "bun run build",
    "lint": "biome check --write",
    "lint:unsafe": "biome lint --write --unsafe src test",
    "format": "biome format --write src test package.json",
    "check": "biome check src",
    "check:fix": "biome check --fix src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atomic-ehr/fhirschema.git"
  },
  "keywords": [
    "fhir",
    "fhirschema",
    "healthcare",
    "validation",
    "converter",
    "typescript"
  ],
  "author": "Atomic EHR",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/atomic-ehr/fhirschema/issues"
  },
  "homepage": "https://github.com/atomic-ehr/fhirschema#readme",
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@types/bun": "latest",
    "turndown": "^7.2.1",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
